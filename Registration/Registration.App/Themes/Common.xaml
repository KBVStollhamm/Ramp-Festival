<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="AccentColor">#FF1ba1e2</Color>
    <SolidColorBrush x:Key="Accent" Color="{DynamicResource AccentColor}" />

    <Color x:Key="AppMainBackgroundColor">Black</Color>
    <SolidColorBrush x:Key="AppMainBackground" Color="{DynamicResource AppMainBackgroundColor}" />

    <Color x:Key="MainTextColor">White</Color>
    <SolidColorBrush x:Key="MainText" Color="{DynamicResource MainTextColor}" />
    
</ResourceDictionary>